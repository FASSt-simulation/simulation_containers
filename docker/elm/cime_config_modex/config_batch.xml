<?xml version="1.0"?>
<config_machines version="2.0">
  <!-- modex is slurm -->
  <batch_system MACH="modex" type="slurm" >
    <batch_submit>sbatch</batch_submit>
    <submit_args>
      <arg flag="--time" name="$JOB_WALLCLOCK_TIME"/>
      <arg flag="-p" name="$JOB_QUEUE"/>
      <arg flag="--account" name="$PROJECT"/>
    </submit_args>
    <queues>
      <queue walltimemax="36:00:00" nodemin="1" nodemax="3" default="true">compute</queue>
    </queues>
  </batch_system>
</config_batch>